@model RouteWayAPP.Models.Delivery

@{
    ViewData["Title"] = "Delivery Details";
}

<h1>Delivery Details</h1>

<div>
    <h4>Delivery</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Delivery Id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeliveryId)
        </dd>
        <dt class = "col-sm-2">
            Driver
        </dt>
        <dd class="col-sm-10">
            @Html.ActionLink($"{ViewBag.Driver.Name}", "EmployeeDetails", new { employeeId = Model.DriverId })
            
        </dd>
        <dt class = "col-sm-2">
            Case Count
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CaseCount)
        </dd>
        <dt class = "col-sm-2">
            Delivery Time
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeliveryTime)
        </dd>
    </dl>
</div>
